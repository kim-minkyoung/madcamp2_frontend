<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/rounded_rectangle">

    <TextView
        android:id="@+id/rankingPositionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/rankingAvatarImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_launcher_foreground" /> <!-- Placeholder for avatar -->

    <TextView
        android:id="@+id/rankingNicknameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Nickname"
        android:textSize="18sp"
        android:paddingStart="16dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/rankingScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:textSize="18sp"
        android:paddingStart="16dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_vertical"/>
</LinearLayout>
