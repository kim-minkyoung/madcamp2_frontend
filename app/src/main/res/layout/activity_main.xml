    <!-- Draw Button (Centered vertically and horizontally) -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <!-- Draw Button (Centered vertically and horizontally) -->
        <Button
            android:id="@+id/startDrawingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게임 시작"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"/>

        <!-- Ranking Button (Below Draw Button, centered horizontally and aligned to bottom of parent) -->
        <Button
            android:id="@+id/rankingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="순위"
            android:textSize="18sp"
            android:layout_below="@id/startDrawingButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

    </RelativeLayout>


